---
import AboutSection from '../components/index/AboutSection.astro'
import ContactSection from '../components/index/ContactSection.astro'
import AgendaSection from '../components/index/AgendaSection.astro'
import Hero from '../components/index/Hero.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts'
import BaseLayout from '../layouts/BaseLayout.astro'
import { organizationSchema } from '../jsonld-schemas/organization'
---

<BaseLayout
  title={`${SITE_TITLE} | Associació Juvenil de Begur | Qui sóm?`}
  description={SITE_DESCRIPTION}
  image="https://barrakudesbegur.github.io/landing/icons/android-chrome-256x256.png"
  schemas={[{ item: organizationSchema }]}
>
  <Hero />

  <main>
    <AboutSection />
    <ContactSection />
    <AgendaSection />
  </main>
</BaseLayout>
