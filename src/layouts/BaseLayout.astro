---
import BaseHead from '../components/BaseHead.astro'
import type { Props as BaseHeadProps } from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import '@fontsource/londrina-solid'
import '@fontsource/inter'

type Props = BaseHeadProps & { class?: string }

const { class: classList, ...props } = Astro.props
---

<!doctype html>
<html lang="ca-ES" class="scroll-smooth">
  <head>
    <BaseHead {...props} />
  </head>

  <body class:list={['min-h-[100vh] bg-slate-50 text-slate-900', classList]}>
    <Header />

    <slot />

    <Footer />
  </body>
</html>
